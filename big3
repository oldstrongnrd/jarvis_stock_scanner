#!/bin/bash
# Big 3 Scanner - Enhanced CLI Wrapper
# Usage: big3 [command] [options]

SCRIPT_DIR="$HOME/Documents/Code/trading-bot"
SCANNER_SCRIPT="$SCRIPT_DIR/official_big3_scanner.py"
CLI_SCRIPT="$SCRIPT_DIR/cli_scanner.py"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Check if the script directory exists
if [ ! -d "$SCRIPT_DIR" ]; then
    echo -e "${RED}Error: Big 3 Scanner directory not found at $SCRIPT_DIR${NC}"
    exit 1
fi

# Function to show help
show_help() {
    echo -e "${BLUE}Big 3 Scanner - Taylor Horton's Options Strategy${NC}"
    echo ""
    echo -e "${YELLOW}Usage:${NC}"
    echo "  big3                    # Run full scanner"
    echo "  big3 scan               # Run full scanner with options"
    echo "  big3 focus              # Scan Taylor's Focus List only"
    echo "  big3 analyze TICKER     # Analyze specific ticker"
    echo "  big3 quick              # Quick scan (min score 90)"
    echo "  big3 help               # Show this help"
    echo ""
    echo -e "${YELLOW}Examples:${NC}"
    echo "  big3                    # Full scan"
    echo "  big3 focus              # Focus list only"
    echo "  big3 analyze AAPL       # Analyze Apple"
    echo "  big3 quick              # High-quality setups only"
    echo ""
    echo -e "${YELLOW}Advanced:${NC}"
    echo "  big3 scan --min-score 100 --detailed GOOGL"
    echo "  big3 scan --focus-list-only"
}

# Change to script directory
cd "$SCRIPT_DIR"

# Parse command
case "${1:-scan}" in
    "help"|"-h"|"--help")
        show_help
        ;;
    "scan"|"")
        if [ $# -eq 0 ]; then
            echo -e "${GREEN}üöÄ Running Big 3 Scanner...${NC}"
            python3 "$SCANNER_SCRIPT"
        else
            shift
            python3 "$CLI_SCRIPT" scan "$@"
        fi
        ;;
    "focus")
        echo -e "${GREEN}‚≠ê Scanning Taylor's Focus List...${NC}"
        python3 -c "
from official_big3_scanner import OfficialBig3Scanner, OfficialScanConfig
config = OfficialScanConfig(min_score=80, focus_list_only=True)
scanner = OfficialBig3Scanner(config)
results = scanner.scan_parallel()
if not results.empty:
    print(results)
    focus_results = scanner.get_focus_list_results()
    if focus_results:
        print('\n‚≠ê FOCUS LIST DETAILED ANALYSIS:')
        for result in focus_results[:3]:
            scanner.print_detailed_analysis(result.ticker)
else:
    print('No qualifying Focus List setups found')
"
        ;;
    "analyze")
        if [ -z "$2" ]; then
            echo -e "${RED}Error: Please specify a ticker to analyze${NC}"
            echo "Usage: big3 analyze TICKER"
            exit 1
        fi
        echo -e "${GREEN}üîç Analyzing $2...${NC}"
        python3 "$CLI_SCRIPT" analyze "$2"
        ;;
    "quick")
        echo -e "${GREEN}‚ö° Quick scan (high-quality setups only)...${NC}"
        python3 -c "
from official_big3_scanner import OfficialBig3Scanner, OfficialScanConfig
config = OfficialScanConfig(min_score=90, min_strength=80.0)
scanner = OfficialBig3Scanner(config)
results = scanner.scan_parallel()
if not results.empty:
    print(results)
    a_plus = scanner.get_a_plus_setups()
    if a_plus:
        print('\n‚òÖ‚òÖ‚òÖ TOP A+ SETUPS:')
        for result in a_plus[:2]:
            scanner.print_detailed_analysis(result.ticker)
else:
    print('No high-quality setups found')
"
        ;;
    *)
        echo -e "${RED}Unknown command: $1${NC}"
        echo "Use 'big3 help' for usage information"
        exit 1
        ;;
esac